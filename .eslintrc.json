{
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest/globals": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier", "jest"],
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "camelcase": ["error"],
      "eqeqeq": ["error", "always"]
    },
    "overrides": [
      {
        "files": ["**/*.test.ts", "**/*.test.js"],
        "env": {
          "jest/globals": true
        }
      }
    ]
  }
  